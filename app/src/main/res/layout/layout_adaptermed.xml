<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/tv_pacienteMED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:text="Paciente"
        android:textColor="#004678" />

    <TextView
        android:id="@+id/tv_fechaMED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_paciente"
        android:gravity="right"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:text="Fecha" />

    <TextView
        android:id="@+id/tv_procedimientoMED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_paciente"
        android:layout_alignStart="@+id/tv_paciente"
        android:layout_below="@+id/tv_fecha"
        android:text="Procedimiento" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_estadoMED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_procedimiento"
            android:layout_alignStart="@+id/tv_procedimiento"
            android:layout_below="@+id/tv_procedimiento"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:text="Estado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnInformeDetailsMED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:text="Informe"

                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>