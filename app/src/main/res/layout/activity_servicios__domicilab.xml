<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itms.com.pe.app.servicios_Domicilab">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#004678"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnProcedimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:text="    AGREGAR \n PROCEDIMIENTOS"
        android:textColor="#FFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btn_domicilab_confirmacion">

        <ListView
            android:id="@+id/lista_procedimientos_domicilab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_domicilab_confirmacion"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp"
        android:background="#D7D7D7"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:layout_weight="1"
        android:enabled="false"
        android:text="Confirmar Procedimientos" />

</RelativeLayout>
