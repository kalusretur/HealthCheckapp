<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itms.com.pe.app.Registro">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#004678"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp">




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtCorreoRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email2"
                    android:ems="10"
                    android:hint="Ingresa tu dirección de e-mail"
                    android:inputType="textPersonName"
                    android:maxLength="99"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_cellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtCelularRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cel"
                    android:ems="10"
                    android:hint="Número de Celular"
                    android:inputType="number"
                    android:maxLength="9"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtPassRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/candado"
                    android:ems="10"
                    android:hint="Ingresa tu contraseña"
                    android:inputType="textPassword"
                    android:maxLength="99"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtPass2RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/candado"
                    android:ems="10"
                    android:hint="Confirma tu contraseña"
                    android:inputType="textPassword"
                    android:maxLength="99"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtTerminosRG">

                <CheckBox
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chkTerminosRG"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Acepto los términos y condiciones"
                    android:layout_marginTop="35dp"
                    android:id="@+id/condicionesRG" />


            </LinearLayout>

            <Button
                android:text="Regístrate"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/btnRegistroRG"
                android:textColor="@android:color/primary_text_dark_nodisable"
                android:background="@color/material_blue_grey_950"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
